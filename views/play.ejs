<%- include('./templates/header'); -%>
<div class="container-fluid">
    <div class="col-sm-4">
        <h1><%= question%></h1>
        <div id = "myApp" method = "post">
            <form id = 'saveQuiz' name = "saveQuiz" action = "/save/quiz" method = "post">
                <input type="hidden"  name="quizid" id = "<%=id%>"  value="<%=id%>">
                <div class = "form-group">
                    <input type="text" class = "form-control"  name="answer" id = "answer" placeholder = "Escribe Respuesta" value="<%=answer%>">
                </div>
                <span id = "resMsg"></span>
                <button type= 'button' class = 'btn btn-outline-success btn-block btn-bg' name = "check" > Verifica </button>
            </form>
            <hr>
            <p><button type= 'button' class = 'btn btn-outline-secondary btn-block btn-bg' name = "back"> Regresar </button></p>
        </div>
    </div>
</div>
<%- include('./templates/scripts'); -%>
<script src = "../../public/js/bubbling.js"> </script>
<script src = "../../public/js/methods.js"> </script>
<%- include('./templates/end'); -%>